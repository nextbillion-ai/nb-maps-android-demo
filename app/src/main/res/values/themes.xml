<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NBMapsDemoApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_mint_100</item>
        <item name="colorPrimaryVariant">@color/palette_mint_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NBMapsDemoApp.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_mint_100</item>
        <item name="colorPrimaryVariant">@color/palette_mint_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomLocationComponent" parent="nbmap_LocationComponent">
        <item name="nbmap_foregroundDrawable">@drawable/custom_user_icon</item>

        <item name="nbmap_bearingDrawable">@drawable/custom_user_arrow</item>
        <item name="nbmap_gpsDrawable">@drawable/custom_user_puck_icon</item>

        <item name="nbmap_accuracyAlpha">0.15</item>
        <item name="nbmap_accuracyColor">#FF82C6</item>

        <item name="nbmap_elevation">0dp</item>
        <item name="nbmap_compassAnimationEnabled">false</item>
        <item name="nbmap_accuracyAnimationEnabled">false</item>
        <item name="nbmap_pulsingLocationCircleEnabled">true</item>

    </style>

</resources>